<a href="<%= list_path(list) %>">
  <div class="list-card card col-3 m-2 text-bg-dark" style="width: 250px;">
    <img src="https://images.unsplash.com/photo-1636572481914-a07d36917486?q=80&w=2370&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img">
    <div class="card-img-overlay d-flex align-items-center justify-content-center">
      <h5 class="fw-bold"><%= list.name %></h5>
    </div>
    <span class="badge p-1 rounded-circle bg-danger position-absolute top-0 end-0"><%= "#{list.movies.count}" %> <i class="fa-solid fa-film"></i></span>
  </div>
</a>
